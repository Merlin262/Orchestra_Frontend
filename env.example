# ========================================
# CONFIGURAÇÃO DE AMBIENTE - ORCHESTRA
# ========================================

# AMBIENTE DE EXECUÇÃO
# development, production, test
NODE_ENV=development

# ========================================
# URLs DA API POR AMBIENTE
# ========================================

# URL geral da API (sobrescreve as URLs específicas por ambiente)
NEXT_PUBLIC_API_URL=https://localhost:7073

# URL da API para desenvolvimento local (.NET)
NEXT_PUBLIC_API_URL_DEV=https://localhost:7073

# URL da API para produção (Azure Container Apps)
NEXT_PUBLIC_API_URL_PROD=https://orchestra.agreeablesmoke-0a2944b9.westus2.azurecontainerapps.io

# Timeout das requisições da API (em milissegundos)
NEXT_PUBLIC_API_TIMEOUT=10000

# ========================================
# CONFIGURAÇÕES DA APLICAÇÃO
# ========================================

# Nome da aplicação
NEXT_PUBLIC_APP_NAME=Orchestra

# Versão da aplicação
NEXT_PUBLIC_APP_VERSION=1.0.0

# ========================================
# CONFIGURAÇÕES DE DEBUG
# ========================================

# Habilitar logs de chamadas da API (true/false)
NEXT_PUBLIC_DEBUG_API=true

# Habilitar logs de ambiente (true/false)
NEXT_PUBLIC_DEBUG_ENV=true

# ========================================
# EXEMPLOS DE CONFIGURAÇÃO
# ========================================

# Para desenvolvimento local:
# NODE_ENV=development
# NEXT_PUBLIC_API_URL_DEV=https://localhost:7073

# Para produção (Azure Container Apps):
# NODE_ENV=production
# NEXT_PUBLIC_API_URL_PROD=https://orchestra.agreeablesmoke-0a2944b9.westus2.azurecontainerapps.io

# Para produção (cloud):
# NODE_ENV=production
# NEXT_PUBLIC_API_URL_PROD=https://api.seudominio.com 